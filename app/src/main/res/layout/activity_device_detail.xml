<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg3">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/back_device_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_edittext">
        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Details"
            android:layout_margin="20dp"
            android:textSize="40sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/device_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Name"
                android:textStyle="bold"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/device_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/uid_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UID:"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="16dp"/>


            <TextView
                android:id="@+id/uid_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/device_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Type:"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/device_type_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/gpio_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPIO:"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/gpio_pin_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/detail_esp_ip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESP IP:"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/detail_esp_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/edit_device_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:contentInsetEnd="0dp"
                    app:minWidth="100dp">
                    <ImageView
                        android:id="@+id/edit_device_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_edit_note_24" />
                </androidx.appcompat.widget.Toolbar>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/delete_device_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:contentInsetEnd="0dp"
                    app:minWidth="100dp">
                    <ImageView
                        android:id="@+id/delete_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_delete_forever_24" />
                </androidx.appcompat.widget.Toolbar>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>

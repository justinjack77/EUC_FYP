<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg2"
    android:id="@+id/frame_layout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-black"
            android:text="Welcome!"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="170dp"
            android:fontFamily="sans-serif-black"
            android:text="TO CONTROL ELECTRONIC DEVICES"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="230dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="120dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <!-- TODO: Update blank fragment layout -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/add_image_view"
                        android:layout_width="85dp"
                        android:layout_height="46dp"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/baseline_add_to_photos_100" />

                    <ImageView
                        android:id="@+id/home_image_view"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/baseline_maps_ugc_100" />

                    <ImageView
                        android:id="@+id/people_outline_image_view"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/baseline_people_outline_100" />

                    <ImageView
                        android:id="@+id/settings_image_view"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/baseline_settings_suggest_100" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="120dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <!-- TODO: Update blank fragment layout -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/twitter_icon"
                        android:layout_width="85dp"
                        android:layout_height="46dp"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/baseline_send_24" />

                    <ImageView
                        android:id="@+id/facebook_icon"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/fb" />

                    <ImageView
                        android:id="@+id/whatsapp_icon"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/wa" />

                    <ImageView
                        android:id="@+id/instagram_icon"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/in" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
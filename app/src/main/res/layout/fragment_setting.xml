<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.euc.SettingFragment"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4">
    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/back_device_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/red"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



<!--        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imaaaaaaaa"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scrollbarSize="100dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="120dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <!-- TODO: Update blank fragment layout -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emailDetailView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/uidDetailView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/custom_edittext"
                android:minHeight="120dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <!-- TODO: Update blank fragment layout -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/twitter_icon"
                        android:layout_width="85dp"
                        android:layout_height="46dp"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/baseline_send_24" />

                    <ImageView
                        android:id="@+id/facebook_icon"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/fb" />

                    <ImageView
                        android:id="@+id/whatsapp_icon"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/wa" />

                    <ImageView
                        android:id="@+id/instagram_icon"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:scrollbarSize="100dp"
                        android:src="@drawable/in" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="Log out" />

    </LinearLayout>

</LinearLayout>

</FrameLayout>